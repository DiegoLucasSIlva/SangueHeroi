<!--Este eh o layout dos itens do recyclerViews-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="1dp"
    android:paddingLeft="1dp">

    <TextView
        android:id="@+id/tv_datadoacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:paddingRight="16dp"
        android:textSize="16sp" />

    <TextView
        android:layout_toEndOf="@+id/tv_datadoacao"
        android:id="@+id/tv_endereco"
        android:layout_marginBottom="5dp"
        android:paddingRight="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp" />

    <!--Esta view deixa uma linha entre os itens-->
    <View
        android:id="@+id/vw_divider"
        android:layout_below="@+id/tv_endereco"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="0.8dp" />

</RelativeLayout>
